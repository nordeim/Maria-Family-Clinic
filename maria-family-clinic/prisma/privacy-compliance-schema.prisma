  medicalConsent        Boolean  @default(false)
  professionalConsultation Boolean @default(false) // Healthcare professional involved
  emergencyException    Boolean  @default(false) // Emergency treatment exception
  vitalInterests        Boolean  @default(false) // Vital interests justification
  
