  incidentId            String   @unique @default(uuid())
  
  // Incident Classification
  incidentType          PrivacyIncidentType
  severity              SecuritySeverity @default(LOW)
  category              IncidentCategory
  dataInvolved          Boolean  @default(false)
  
  // Incident Details
  title                 String
  description           String   @db.Text
  discoveryDate         DateTime @default(now())
  occurrenceDate        DateTime? // When incident actually occurred
  
  // Data Classification
