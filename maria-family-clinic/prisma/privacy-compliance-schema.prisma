  // Audit and Compliance
  uploadAuditRequired   Boolean  @default(true)
  accessLogRequired     Boolean  @default(true)
  complianceFlags       Json     @default("[]")
  regulatoryCategory    String?  // e.g., "medical_record", "research_data"
  
