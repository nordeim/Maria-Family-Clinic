// Enhanced ContactForm with field-level encryption for health data
model ContactFormPrivacy {
  id                    String   @id @default(cuid())
  contactFormId         String   @unique
  
  // Data Classification and Encryption
  dataClassification    DataClassification @default(PUBLIC)
  encryptionStatus      EncryptionStatus @default(NOT_ENCRYPTED)
  encryptionKeyId       String?  // Reference to encryption key
  encryptedFields       Json     @default("{}") // Encrypted field data
  
  // PDPA Compliance
  consentStatus         ConsentStatus @default(NO_CONSENT)
  consentVersion        String?  // Version of consent text used
  consentExpiry         DateTime?
  legalBasis            LegalBasis? // PDPA legal basis for processing
  consentAuditTrail     Json     @default("[]") // Consent change history
  
  // Purpose and Use Controls
  processingPurposes    Json     @default("[]") // Declared purposes for data use
  secondaryUseConsent   Boolean  @default(false) // Consent for secondary use
  dataMinimizationLevel DataMinimizationLevel @default(STANDARD)
  
  // Access Control and Permissions
  accessRoleMatrix      Json     @default("{}") // Role-based access control matrix
  dataAccessLog         Json     @default("[]") // Access log for compliance
  exportPermissions     Json     @default("[]") // Permitted data export purposes
  thirdPartySharing     Boolean  @default(false)
  thirdPartyConsents    Json     @default("[]") // Third-party sharing consents
  
  // Retention and Deletion
  retentionCategory     RetentionCategory @default(STANDARD)
  retentionDate         DateTime? // When data should be deleted
  deletionSchedule      Json     @default("{}") // Automated deletion schedule
  archiveDate           DateTime?
  dataDeletionAudit     Json     @default("[]") // Deletion audit trail
  
  // Audit and Monitoring
  privacyAuditEnabled   Boolean  @default(true)
  complianceAlerts      Json     @default("[]") // Alert configuration
  incidentTracking      Json     @default("[]") // Security incidents
  complianceScore       Float?   // Overall privacy compliance score
  
  // Healthcare-specific controls
  medicalRecordProtection Boolean @default(false) // Extra protection for medical data
  professionalConfidentiality Boolean @default(false) // Medical confidentiality
  hipaaEquivalency      Boolean  @default(false) // US HIPAA equivalent protection
  clinicalNoteProtection Boolean @default(false) // Clinical documentation protection
  
  // Data Subject Rights
  accessRequestStatus   RequestStatus @default(NONE)
  rectificationRequest  Boolean  @default(false)
  erasureRequest        Boolean  @default(false)
  portabilityRequest    Boolean  @default(false)
  restrictionRequest    Boolean  @default(false)
  rightsRequestLog      Json     @default("[]") // Rights request history
  
  // Breach Response
  breachNotificationRequired Boolean @default(false)
  breachResponsePlan    Json     @default("{}") // Incident response plan
  notificationTimeline  Json     @default("[]") // Breach notification timeline
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  // Relationships
  contactForm           ContactForm @relation(fields: [contactFormId], references: [id], onDelete: Cascade)
  
  @@index([contactFormId])
  @@index([dataClassification])
  @@index([retentionDate])
  @@index([consentStatus])
  @@map("contact_form_privacy")
}

// Comprehensive Audit Logging for Privacy Compliance
model PrivacyAuditLog {
  id                    String   @id @default(cuid())
  
  // Event Identification
  eventId               String   @unique @default(uuid())
  eventType             PrivacyEventType
  eventCategory         PrivacyEventCategory
  severity              SecuritySeverity @default(INFO)
  
  // Actor Information
  actorId               String?  // User or system performing action
  actorName             String?
  actorRole             String?
  actorType             ActorType // USER, SYSTEM, AUTOMATION, EXTERNAL
  sessionId             String?
  
  // Resource Information
  resourceType          String   // e.g., 'contact_form', 'enquiry', 'document'
  resourceId            String
  resourceName          String?
  dataSensitivity       DataClassification @default(PUBLIC)
  
  // Action Details
  actionPerformed       String   @db.Text // Description of action
  actionResult          String?  @db.Text // Result of action
  previousValue         String?  @db.Text // Previous data value (if applicable)
  newValue              String?  @db.Text // New data value (if applicable)
  
  // Context and Environment
  ipAddress             String?
  userAgent             String?
  requestId             String?  // Request correlation ID
  apiEndpoint           String?  // API endpoint accessed
  httpMethod            String?  // HTTP method used
  responseStatus        Int?     // HTTP response status
  
  // Compliance Context
  complianceFrameworks  String[] @default([]) // PDPA, GDPR, HIPAA, etc.
  legalBasis            String?  // Legal basis for processing
  consentStatus         ConsentStatus? // Consent status at time of action
  dataRetentionStatus   String?  // Data retention status
  
  // Healthcare Context
  containsPHI           Boolean  @default(false) // Protected Health Information
  medicalContext        Boolean  @default(false) // Medical or clinical context
  professionalPrivilege Boolean  @default(false) // Medical professional privilege
  clinicalNote          Boolean  @default(false) // Part of clinical documentation
  
  // Risk Assessment
  riskLevel             RiskLevel @default(LOW)
  riskScore             Float?   // Calculated risk score 0-100
  riskFactors           Json     @default("[]") // Risk factors identified
  mitigationActions     Json     @default("[]") // Risk mitigation actions taken
  
  // Monitoring and Alerts
  triggersAlert         Boolean  @default(false)
  alertSeverity         SecuritySeverity?
  alertConfiguration    String?  // Alert rule that triggered
  automatedResponse     Boolean  @default(false)
  manualReviewRequired  Boolean  @default(false)
  
  // Compliance Tracking
  complianceScore       Float?   // Compliance score for this event
  regulatoryReporting   Boolean  @default(false) // Should be reported to regulators
  reportingDeadline     DateTime?
  reportStatus          ReportStatus @default(NOT_REQUIRED)
  
  // Chain of Custody (Tamper-proof)
  hashChainPrevious     String?  // Hash of previous log entry
  hashChainCurrent      String   // Hash of current log entry
  digitalSignature      String?  // Digital signature for integrity
  verificationKeyId     String?  // Key used for signature verification
  
  // Metadata
  metadata              Json     @default("{}")
  tags                  String[] @default([])
  retentionCategory     RetentionCategory @default(CRITICAL)
  
  // Timestamps
  eventTimestamp        DateTime @default(now())
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([eventType])
  @@index([eventCategory])
  @@index([severity])
  @@index([actorId])
  @@index([resourceType, resourceId])
  @@index([eventTimestamp])
  @@index([dataSensitivity])
  @@index([containsPHI])
  @@index([hashChainPrevious])
  @@map("privacy_audit_log")
}

// Consent Management System
