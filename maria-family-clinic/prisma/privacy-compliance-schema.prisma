  fileId                String   @unique @default(uuid())
  originalFilename      String
  storedFilename        String   @unique
  filePath              String
  fileSize              BigInt
  mimeType              String
  fileHash              String   @unique // SHA-256 hash for integrity
  
  // Document Classification
