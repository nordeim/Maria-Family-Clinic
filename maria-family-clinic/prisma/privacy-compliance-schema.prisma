  businessImpact        ImpactLevel @default(MINIMAL)
  reputationImpact      ImpactLevel @default(MINIMAL)
  
  // Root Cause
  rootCause             String?  @db.Text
  contributingFactors   Json     @default("[]")
  vulnerabilityExploited String? @db.Text
  
  // Response Actions
