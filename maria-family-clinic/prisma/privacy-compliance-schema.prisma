  authoritiesNotified   Boolean  @default(false)
  individualsNotified   Boolean  @default(false)
  mediaResponse         String?  @db.Text // Media response status
  
  // Regulatory Requirements
  pdpaReportable        Boolean  @default(false)
  reportableUnder       String[] @default([]) // Which regulations require reporting
  reportDeadline        DateTime?
  authorityReportDate   DateTime?
  authorityReference    String?  // Reference number from authority
  
  // Investigation
  investigationStatus   InvestigationStatus @default(IN_PROGRESS)
  investigator          String?  // Staff member conducting investigation
  externalInvestigation Boolean  @default(false)
  investigationNotes    String?  @db.Text
  
  // Resolution
  resolutionDate        DateTime?
  resolutionSummary     String?  @db.Text
  lessonsLearned        String?  @db.Text
  policyUpdates         String?  @db.Text
  trainingRequired      Boolean  @default(false)
  
  // Costs and Resources
  estimatedCost         Float?   // Cost in SGD
  resourceHours         Float?   // Hours of staff time
  externalCosts         Float?   // External costs (consultants, legal, etc.)
  
  // Follow-up
  followUpRequired      Boolean  @default(false)
  followUpDate          DateTime?
  followUpStatus        String?  // e.g., "completed", "in_progress"
  
  // Metrics
  responseTime          Int?     // Minutes from discovery to response
  containmentTime       Int?     // Minutes from discovery to containment
  resolutionTime        Int?     // Minutes from discovery to resolution
  notificationTime      Int?     // Minutes from discovery to notification
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([incidentType])
  @@index([severity])
  @@index([status])
  @@index([discoveryDate])
  @@index([pdpaReportable])
  @@index([reportDeadline])
  @@map("privacy_incidents")
}

// ========================================
// ENUMS FOR PRIVACY & COMPLIANCE
