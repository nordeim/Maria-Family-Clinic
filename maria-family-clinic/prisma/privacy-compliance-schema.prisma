  clinicalContext       Boolean  @default(false)
  professionalPrivilege Boolean  @default(false) // Medical professional privilege
  consentRequired       Boolean  @default(false)
  
  // Metadata
  uploadUserId          String?
  uploadTimestamp       DateTime @default(now())
  lastAccessed          DateTime?
  accessCount           Int      @default(0)
  downloadCount         Int      @default(0)
  
  // Relationships
  relatedContactFormId  String?
  relatedEnquiryId      String?
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([fileId])
  @@index([documentType])
  @@index([dataClassification])
  @@index([containsPHI])
  @@index([scheduledDeletion])
  @@map("secure_documents")
}

