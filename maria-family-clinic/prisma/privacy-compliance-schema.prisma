  PUBLIC
  INTERNAL
  CONFIDENTIAL
  RESTRICTED
  TOP_SECRET
  REGULATED
  PHI // Protected Health Information
  PCI // Payment Card Information
  PII // Personally Identifiable Information
}

// Encryption Status
enum EncryptionStatus {
  NOT_ENCRYPTED
  ENCRYPTED
  ENCRYPTION_IN_PROGRESS
  ENCRYPTION_FAILED
  PARTIALLY_ENCRYPTED
}

// Consent Status
enum ConsentStatus {
  NO_CONSENT
  PENDING
  GRANTED
  WITHDRAWN
  EXPIRED
  INVALID
  UNDER_REVIEW
}

// Legal Basis (PDPA)
