  @@index([dataSubjectId])
  @@index([consentStatus])
  @@index([consentDate])
  @@index([consentExpiry])
  @@map("consent_records")
}

// Data Retention and Lifecycle Management
model DataRetentionPolicy {
  id                    String   @id @default(cuid())
  policyName            String   @unique
  description           String?  @db.Text
  
  // Policy Scope
  appliesTo             RetentionScope
  dataCategories        Json     @default("[]") // Categories of data this applies to
  entityTypes           Json     @default("[]") // e.g., contact_forms, enquiries, documents
  
  // Retention Rules
  retentionPeriod       String   // e.g., "7 years", "2 years", "indefinite"
  retentionDays         Int?     // Numeric value for calculations
  retentionBasis        RetentionBasis
  
  // Legal and Regulatory Basis
  legalRequirement      String?  @db.Text // Legal basis for retention
  regulatoryFramework   String[] @default([]) // PDPA, Medical Act, etc.
  retentionJustification String? @db.Text
  
  // Lifecycle Actions
  archiveAfter          String?  // When to archive data
  deletionAfter         String?  // When to delete data
  reviewRequired        Boolean  @default(false)
  reviewInterval        String?  // How often to review
  
  // Deletion Method
  deletionMethod        DeletionMethod @default(STANDARD_DELETE)
  secureDeleteRequired  Boolean  @default(true)
  deletionVerification  Boolean  @default(true)
  deletionAuditRequired Boolean  @default(true)
  
  // Exceptions and Overrides
  legalHold             Boolean  @default(false) // Legal hold overrides deletion
  legalHoldExpiry       DateTime?
  overrideConditions    Json     @default("[]") // Conditions that override policy
  
  // Monitoring and Compliance
  enforcementEnabled    Boolean  @default(true)
  complianceAlerts      Boolean  @default(true)
  automatedExecution    Boolean  @default(true)
  manualReviewRequired  Boolean  @default(false)
  
  // Statistics
  recordsManaged        Int      @default(0)
  successfulDeletions   Int      @default(0)
  failedDeletions       Int      @default(0)
  lastExecution         DateTime?
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([appliesTo])
  @@index([retentionDays])
  @@map("data_retention_policies")
}

